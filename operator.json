{
  "name": "scRNAseq Feature Selection",
  "description": "Finds the most variable features (genes) in single-cell RNA sequencing data.",
  "tags": [
    "omics",
    "sc-RNA-seq",
    "preprocessing"
  ],
  "authors": [
    "tercen"
  ],
  "urls": [
    "https://github.com/tercen/scRNAseq_findVariableFeatures_operator"
  ],
  "properties": [
    {
      "kind": "EnumeratedProperty",
      "name": "selection.method",
      "defaultValue": "vst",
      "values": [
        "vst",
        "mean.var.plot",
        "dispersion"
      ],
      "description": "How to choose top variable features. See Seurat documentation."
    },
    {
      "kind": "DoubleProperty",
      "name": "nfeatures",
      "defaultValue": 2000,
      "description": "Number of features to select as top variable features."
    },
    {
      "kind": "DoubleProperty",
      "name": "loess.span",
      "defaultValue": 0.3,
      "description": "Loess span parameter used when fitting the variance-mean relationship."
    }
  ],
  "operatorSpec": {
    "kind": "OperatorSpec",
    "ontologyUri": "https://tercen.com/_ontology/tercen",
    "ontologyVersion": "0.0.1",
    "inputSpecs": [
      {
        "kind": "CrosstabSpec",
        "metaFactors": [
          {
            "kind": "MetaFactor",
            "name": "Gene ID",
            "type": "",
            "description": "Gene identifiers",
            "ontologyMapping": "variable",
            "crosstabMapping": "row",
            "cardinality": "1..n",
            "factors": []
          },
          {
            "kind": "MetaFactor",
            "name": "Cell ID",
            "type": "",
            "description": "Cell identifiers",
            "ontologyMapping": "observation",
            "crosstabMapping": "column",
            "cardinality": "1..n",
            "factors": []
          }
        ],
        "axis": [
          {
            "kind": "AxisSpec",
            "metaFactors": [
              {
                "kind": "MetaFactor",
                "name": "Normalized Count",
                "type": "numeric",
                "description": "Normalized count data, per cell",
                "ontologyMapping": "measurement",
                "crosstabMapping": "y",
                "cardinality": "1",
                "factors": []
              }
            ]
          }
        ]
      }
    ]
  }
}